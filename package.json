{
  "name": "axion-hub-electron",
  "version": "1.0.0",
  "description": "Axion Hub â€” launcher (Electron + Vite + React + TS)",
  "author": "Your Name",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
