    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0",
    "esbuild": "^0.19.0",
    "@vitejs/plugin-react": "^4.0.0"
  },
  "build": {
    "appId": "com.axion.hub",
    "productName": "Axion Hub",
    "files": [
      "dist/**",
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    }
  }
}